@model IEnumerable<Tarefa>


<div class="row">
    <div class="col-md-2">
        <form asp-action="Filtrar" asp-controller="Home" method="post">

            <div class="mb-3">
                <label class="form-label">Categoria</label>
                <select name="filtro" 
                    class="form-select"
                    asp-items="@(new SelectList(
                        ViewBag.Categorias,
                         "CategoriaId","Nome",ViewBag.Filtros.CategoriaId)
                        )">
                <option value="todos">Todos</option>
                </select>
            </div>

            <div class="mb-3">
                <label class="form-label">Data de Vencimento</label>
                <select name="filtro"
                        class="form-select"
                        asp-items="@(new SelectList(
                        ViewBag.VencimentoValores,
                         "Key","Value",ViewBag.Filtros.Vencimento)
                        )">
                    <option value="todos">Todos</option>
                </select>
            </div>

            <div class="mb-3">
                <label class="form-label">Situação</label>
                <select name="filtro"
                        class="form-select"
                        asp-items="@(new SelectList(
                        ViewBag.Status,
                         "StatusId","Nome",ViewBag.Filtros.StatusId)
                        )">
                    <option value="todos">Todos</option>
                </select>
            </div>
            <button type="submit" class="btn btn-primary">Filtrar</button>
            <a asp-action="Index" asp-route-id="" class="btn btn-primary">Limpar</a>

        </form>
    </div>

    <div class="col-md-10">


        <form asp-action="MarcarCompleto" method="post" asp-route-id="@ViewBag.Filtros.FiltroString">
               
            <table class="table table-bordered table-striped mt-2">
                <thead>
                    <tr>
                        <th>Descrição</th>
                        <th>Categorias</th>
                        <th>Data de Vencimento</th>
                        <th>Status</th>
                        <th class="w-25"></th>
                    </tr>
                </thead>

                <tbody>
                    @foreach(Tarefa tarefa in Model)
                    {
                        string atrasado = tarefa.Atrasado ? "bg-warning" : "";

                        <tr>
                            <td>@tarefa.Descricao</td>
                            <td>@tarefa.Categoria.Nome</td>
                            <td class="@atrasado">@tarefa.DataVencimento</td>
                            <td class="@atrasado">@tarefa.Status.Nome</td>
                            <td>
                                @if (tarefa.StatusId == "aberto")
                                {
                                    <button type="submit" 
                                        class="btn btn-primary btn-sm" 
                                        name="@nameof(Tarefa.Id)" 
                                        value="@tarefa.Id">
                                        Completar
                                    </button>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </form>
    </div>
</div>







